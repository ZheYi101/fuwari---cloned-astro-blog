const friendlink=[
    {name:"mgg",url:"https://www.mggo.xyz/",description:"√✌🏻",img:"https://www.mggo.xyz/img/avatars/2.gif"},
    {name:"蛋✌🏻",url:"https://dumbdaidai.github.io/",description:"文学大师 给🥚✌🏻👻🌶️😭",img:"/src/assets/images/蛋液.jpg"},
    {name:"付✌🏻",url:"https://fufffh.icu/",description:"acm✌🏻",img:"https://img.picui.cn/free/2024/10/23/67191c08cae0f.png"},
